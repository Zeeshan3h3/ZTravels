<style>
  /* Search input wrapper */
.search-wrapper {
    position: relative;
    display: flex;
    align-items: center;
}

/* Rounded input exactly like the image */
.searchbar {
    width: 230px;
    padding-right: 35px;
    border-radius: 2rem !important;
    border: 2px solid #d4e1ff;
    box-shadow: inset 0px 0px 6px rgba(0, 0, 255, 0.12);
}
.nav-link {
  border : 1px solid black !important;
  border-radius : 2rem;
  margin : 6px;
  
}
.nav-link b {
  color : auto;
}
.nav-link b:hover {
  color : white;
  transition : ease-in;
}
.nav-link:hover {
  background-color : black;
  transition : ease-in;
  color : white;
  box-shadow: inset 0px 0px 6px rgba(0, 0, 255, 0.12);

}



/* Red Search button */
.btn-list {
    background-color: #ff3344 !important;
    color: white !important;
    border-radius: 2rem !important;
    padding: 2rem 1.2rem;
    font-weight: 600;
}

</style>


<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
